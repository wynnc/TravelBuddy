
extends layout

block content
  .w3-container-fluid
    .w36
      img(src='/public/images/TravelBuddy.png' alt='travel buddy logo' class='logo')
      .spanclass
        .span A place to keep all travel documents in one place 
        .span Great tool for using on the road
        .span Fun and easy to use
    #primary
      h1 Your Travel Assistant
      p Get help with your daily travel stuff

    .w3-panel.w3-left.welcomeTextBar
      if locals.user
        .w34.w3-light-grey
          h1.w3-large.w3-serif.welcomeText Welcome #{user.nickname}
      else
          h4.w3-large.w3-serif.welcomeText Keep all of your travel information in one place! Please #[a(href="/login") Log In/Sign Up] to continue.
  